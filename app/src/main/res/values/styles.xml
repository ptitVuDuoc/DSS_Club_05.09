<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#023D67</item>
        <item name="colorPrimaryDark">#023D67</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorControlHighlight">@color/colorAccent</item>
    </style>


    <style name="AVLoadingIndicatorView">
        <item name="minWidth">48dip</item>
        <item name="maxWidth">48dip</item>
        <item name="minHeight">48dip</item>
        <item name="maxHeight">48dip</item>
        <item name="indicatorName">BallPulseIndicator</item>
    </style>

    <style name="AVLoadingIndicatorView.Large">
        <item name="minWidth">76dip</item>
        <item name="maxWidth">76dip</item>
        <item name="minHeight">76dip</item>
        <item name="maxHeight">76dip</item>
        <item name="indicatorName">BallPulseIndicator</item>
    </style>

    <style name="AVLoadingIndicatorView.Small">
        <item name="minWidth">24dip</item>
        <item name="maxWidth">24dip</item>
        <item name="minHeight">24dip</item>
        <item name="maxHeight">24dip</item>
        <item name="indicatorName">BallPulseIndicator</item>
    </style>
    
    <style name="txt_regis">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/font_size_large</item>
        <!--<item name="android:paddingLeft">@dimen/margin_padding_15</item>-->
        <item name="android:layout_marginTop">@dimen/margin_padding_25</item>
    </style>
    
    <style name="enter_edittext">
        <item name="android:layout_height">@dimen/margin_padding_50</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/x_small</item>
        <item name="android:background">@drawable/stroke</item>
        <item name="android:padding">@dimen/small</item>
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:textColorHint">#FF9B9999</item>
        <item name="android:textSize">@dimen/font_size_standard</item>

    </style>

    <style name="CustomTitleTextAppearance">
        <item name="android:textSize">@dimen/font_size_small</item>
        <!--<item name="android:textStyle">bold</item>-->
    </style>

    <style name="txt_menu_bottom">
        <item name="android:textSize">@dimen/font_size_xsmall</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_text_home</item>
    </style>

    <style name="txt_acc_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_padding_35</item>
        <item name="android:layout_marginRight">@dimen/margin_padding_35</item>
        <item name="android:layout_marginTop">@dimen/small</item>
        <item name="android:textSize">@dimen/font_size_standard</item>
        <item name="android:textColor">#0173B9</item>
    </style>

    <style name="txt_acc_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_padding_35</item>
        <item name="android:layout_marginRight">@dimen/margin_padding_35</item>
        <item name="android:layout_marginTop">@dimen/small</item>
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="view_line_acc">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@drawable/bg_color</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_15</item>
        <item name="android:layout_marginRight">@dimen/margin_padding_35</item>
        <item name="android:layout_marginLeft">@dimen/margin_padding_35</item>
    </style>

</resources>
