<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.WinFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_reward"
        android:scaleType="centerCrop"/>

    <ImageView
        android:layout_width="@dimen/margin_padding_280"
        android:layout_height="@dimen/margin_padding_280"
        android:src="@drawable/circle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="centerCrop"
        android:id="@+id/circle"/>

    <ImageView
        android:id="@+id/txt_scan"
        android:layout_width="@dimen/margin_padding_60"
        android:layout_height="@dimen/margin_padding_40"
        android:src="@drawable/title_scan"
        app:layout_constraintTop_toTopOf="@+id/circle"
        app:layout_constraintLeft_toLeftOf="@+id/circle"
        app:layout_constraintRight_toRightOf="@id/circle"
        android:layout_marginTop="@dimen/margin_padding_60"
        android:layout_marginRight="@dimen/x_small"/>

    <ImageView
        android:layout_width="@dimen/margin_padding_210"
        android:layout_height="@dimen/margin_padding_50"
        android:src="@drawable/win"
        app:layout_constraintTop_toTopOf="@id/circle"
        app:layout_constraintBottom_toBottomOf="@id/circle"
        app:layout_constraintRight_toRightOf="@id/circle"
        app:layout_constraintLeft_toLeftOf="@id/circle"
        android:layout_marginBottom="@dimen/margin_padding_25"
        android:layout_marginLeft="@dimen/margin_padding_60"/>

    <ImageView
        android:id="@+id/btn_play"
        android:layout_width="@dimen/margin_padding_180"
        android:layout_height="@dimen/margin_padding_100"
        android:src="@drawable/ic_btn_play"
        app:layout_constraintBottom_toBottomOf="@id/circle"
        app:layout_constraintLeft_toLeftOf="@id/circle"
        app:layout_constraintRight_toRightOf="@id/circle"
        android:layout_marginBottom="@dimen/margin_padding_15"/>

</android.support.constraint.ConstraintLayout>