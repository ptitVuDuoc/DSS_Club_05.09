<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Set màu nền-->
    <!-- đặt thuộc tính màu và độ rộng của đường viền -->
    <gradient
        android:type="linear"
        android:angle="0"
        android:startColor="#0173B9"
        android:endColor="#023D67" />

    <stroke
        android:width="1dp"
        android:color="#DEDCDD"></stroke>
    <!-- và đây là bán kính đường tròn ở 4 góc -->
    <corners android:radius="@dimen/margin_padding_30"></corners>

</shape>